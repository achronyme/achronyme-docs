---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
---

<BaseLayout title="Page Not Found">
  <Header />

  <main class="flex min-h-[calc(100vh-4rem)] flex-col items-center justify-center px-4">
    <div class="text-center">
      <p class="text-base font-semibold text-brand-600 dark:text-brand-400">404</p>
      <h1 class="mt-4 font-display text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl">
        Page not found
      </h1>
      <p class="mt-6 text-base leading-7 text-slate-600 dark:text-slate-400">
        Sorry, we couldn't find the page you're looking for.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/"
          class="rounded-md bg-brand-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-brand-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600"
        >
          Go back home
        </a>
        <a href="/docs" class="text-sm font-semibold text-slate-900 dark:text-white">
          View documentation <span aria-hidden="true">&rarr;</span>
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
