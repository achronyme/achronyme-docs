---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import MobileNav from '../components/layout/MobileNav.astro';
import QuickLinks from '../components/content/QuickLinks.astro';
import QuickLink from '../components/content/QuickLink.astro';
---

<BaseLayout title="Home">
  <Header />
  <MobileNav />

  <main>
    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-slate-50 dark:bg-slate-900">
      <div class="absolute inset-0 bg-gradient-to-br from-brand-500/10 via-transparent to-cyan-500/10" />
      <div class="relative mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8 lg:py-32">
        <div class="text-center">
          <h1 class="font-display text-5xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-6xl lg:text-7xl">
            <span class="text-gradient-brand">Achronyme</span>
          </h1>
          <p class="mx-auto mt-6 max-w-2xl text-lg text-slate-600 dark:text-slate-400">
            Scientific Operations Calculator - A functional programming language built in Rust for
            mathematical computing, DSP, and linear algebra.
          </p>
          <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
            <a
              href="/docs/getting-started/introduction"
              class="inline-flex items-center rounded-lg bg-brand-600 px-6 py-3 text-base font-semibold text-white shadow-sm transition-colors hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 dark:focus:ring-offset-slate-900"
            >
              Get Started
              <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </a>
            <a
              href="https://github.com/achronyme/soc"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center rounded-lg border border-slate-300 bg-white px-6 py-3 text-base font-semibold text-slate-900 shadow-sm transition-colors hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-800 dark:text-white dark:hover:bg-slate-700"
            >
              <svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              GitHub
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Code Preview -->
    <div class="bg-white dark:bg-slate-900 py-16">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <div class="rounded-xl bg-slate-900 p-6 shadow-2xl dark:bg-slate-950">
          <div class="flex items-center space-x-2 pb-4">
            <div class="h-3 w-3 rounded-full bg-red-500" />
            <div class="h-3 w-3 rounded-full bg-yellow-500" />
            <div class="h-3 w-3 rounded-full bg-green-500" />
            <span class="ml-4 text-sm text-slate-400">example.soc</span>
          </div>
          <pre class="text-sm leading-relaxed"><code class="text-slate-300"><span class="text-purple-400">// Define a recursive factorial function</span>
<span class="text-cyan-400">let</span> factorial = <span class="text-cyan-400">rec</span> n =>
  <span class="text-cyan-400">if</span> n <= <span class="text-orange-400">1</span> <span class="text-cyan-400">then</span> <span class="text-orange-400">1</span> <span class="text-cyan-400">else</span> n * factorial(n - <span class="text-orange-400">1</span>)

<span class="text-purple-400">// Vector operations</span>
<span class="text-cyan-400">let</span> v = [<span class="text-orange-400">1</span>, <span class="text-orange-400">2</span>, <span class="text-orange-400">3</span>, <span class="text-orange-400">4</span>, <span class="text-orange-400">5</span>]
<span class="text-cyan-400">let</span> squared = v |> map(x => x * x)
<span class="text-cyan-400">let</span> total = squared |> reduce((a, b) => a + b, <span class="text-orange-400">0</span>)

<span class="text-purple-400">// Complex number support</span>
<span class="text-cyan-400">let</span> z = <span class="text-orange-400">3</span> + <span class="text-orange-400">4</span>i
<span class="text-cyan-400">let</span> magnitude = abs(z)  <span class="text-purple-400">// 5.0</span>

<span class="text-purple-400">// Pattern matching</span>
<span class="text-cyan-400">let</span> describe = n => <span class="text-cyan-400">match</span> n {
  <span class="text-orange-400">0</span> => <span class="text-green-400">"zero"</span>,
  <span class="text-orange-400">1</span> => <span class="text-green-400">"one"</span>,
  _ => <span class="text-green-400">"many"</span>
}

print(factorial(<span class="text-orange-400">5</span>))  <span class="text-purple-400">// 120</span>
print(total)          <span class="text-purple-400">// 55</span></code></pre>
        </div>
      </div>
    </div>

    <!-- Features -->
    <div class="bg-slate-50 dark:bg-slate-800/50 py-20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="font-display text-3xl font-bold text-slate-900 dark:text-white">
            Why Achronyme?
          </h2>
          <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
            Built for scientific computing with modern language features
          </p>
        </div>

        <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
          <div class="rounded-lg bg-white p-6 shadow-sm dark:bg-slate-900">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-brand-100 text-brand-600 dark:bg-brand-900/50 dark:text-brand-400">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23-.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5" />
              </svg>
            </div>
            <h3 class="mt-4 font-display text-lg font-semibold text-slate-900 dark:text-white">
              Functional First
            </h3>
            <p class="mt-2 text-slate-600 dark:text-slate-400">
              Immutable by default with first-class functions, closures, and powerful pattern matching.
            </p>
          </div>

          <div class="rounded-lg bg-white p-6 shadow-sm dark:bg-slate-900">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-brand-100 text-brand-600 dark:bg-brand-900/50 dark:text-brand-400">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
              </svg>
            </div>
            <h3 class="mt-4 font-display text-lg font-semibold text-slate-900 dark:text-white">
              Scientific Computing
            </h3>
            <p class="mt-2 text-slate-600 dark:text-slate-400">
              Native support for complex numbers, tensors, linear algebra, statistics, and DSP.
            </p>
          </div>

          <div class="rounded-lg bg-white p-6 shadow-sm dark:bg-slate-900">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-brand-100 text-brand-600 dark:bg-brand-900/50 dark:text-brand-400">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
              </svg>
            </div>
            <h3 class="mt-4 font-display text-lg font-semibold text-slate-900 dark:text-white">
              Built in Rust
            </h3>
            <p class="mt-2 text-slate-600 dark:text-slate-400">
              High performance and memory safety with a modern, expressive syntax.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="bg-white dark:bg-slate-900 py-20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="font-display text-3xl font-bold text-slate-900 dark:text-white text-center mb-12">
          Explore the Documentation
        </h2>
        <QuickLinks>
          <QuickLink
            title="Getting Started"
            description="Install Achronyme and write your first program in minutes."
            href="/docs/getting-started/introduction"
            icon="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5"
          />
          <QuickLink
            title="Core Language"
            description="Learn the syntax, data types, and fundamental concepts."
            href="/docs/core-language/syntax-basics"
            icon="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"
          />
          <QuickLink
            title="Linear Algebra"
            description="Work with vectors, matrices, and tensor operations."
            href="/docs/mathematical-computing/linear-algebra"
            icon="M3.75 3v11.25A2.25 2.25 0 0 0 6 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0 1 18 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3 1 3m0 0 .5 1.5m-.5-1.5h-9.5m0 0-.5 1.5m.75-9 3-3 2.148 2.148A12.061 12.061 0 0 1 16.5 7.605"
          />
          <QuickLink
            title="DSP Module"
            description="Fast Fourier Transform, convolution, and signal processing."
            href="/docs/specialized-modules/dsp"
            icon="M9.348 14.652a3.75 3.75 0 0 1 0-5.304m5.304 0a3.75 3.75 0 0 1 0 5.304m-7.425 2.121a6.75 6.75 0 0 1 0-9.546m9.546 0a6.75 6.75 0 0 1 0 9.546M5.106 18.894c-3.808-3.807-3.808-9.98 0-13.788m13.788 0c3.808 3.807 3.808 9.98 0 13.788M12 12h.008v.008H12V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"
          />
        </QuickLinks>
      </div>
    </div>

    <!-- Footer -->
    <footer class="border-t border-slate-200 bg-white dark:border-slate-800 dark:bg-slate-900">
      <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div class="text-center text-sm text-slate-600 dark:text-slate-400">
          <p>Achronyme SOC - Scientific Operations Calculator</p>
          <p class="mt-2">Built with Rust. Documentation powered by Astro.</p>
        </div>
      </div>
    </footer>
  </main>
</BaseLayout>
