---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import MobileNav from '../components/layout/MobileNav.astro';

const codeExample = `<span class="text-purple-400">// Define a recursive factorial function</span>
<span class="text-violet-400">let</span> factorial = <span class="text-violet-400">rec</span> n =>
  if(n <= <span class="text-orange-400">1</span>, <span class="text-orange-400">1</span>, n * factorial(n - <span class="text-orange-400">1</span>))

<span class="text-purple-400">// Vector operations with HOFs</span>
<span class="text-violet-400">let</span> v = [<span class="text-orange-400">1</span>, <span class="text-orange-400">2</span>, <span class="text-orange-400">3</span>, <span class="text-orange-400">4</span>, <span class="text-orange-400">5</span>]
<span class="text-violet-400">let</span> squared = map(x => x^<span class="text-orange-400">2</span>, v)
<span class="text-violet-400">let</span> total = reduce((a, b) => a + b, <span class="text-orange-400">0</span>, squared)

<span class="text-purple-400">// Complex number support</span>
<span class="text-violet-400">let</span> z = <span class="text-orange-400">3</span> + <span class="text-orange-400">4</span>i
<span class="text-violet-400">let</span> magnitude = abs(z)  <span class="text-purple-400">// 5.0</span>

<span class="text-purple-400">// Pattern matching</span>
<span class="text-violet-400">let</span> describe = n => <span class="text-violet-400">match</span> n {
  <span class="text-orange-400">0</span> => <span class="text-green-400">"zero"</span>,
  <span class="text-orange-400">1</span> => <span class="text-green-400">"one"</span>,
  _ => <span class="text-green-400">"many"</span>
}

print(factorial(<span class="text-orange-400">5</span>))  <span class="text-purple-400">// 120</span>
print(total)          <span class="text-purple-400">// 55</span>`;
