---
import type { NavItem } from '../../lib/navigation';

interface Props {
  prev?: NavItem;
  next?: NavItem;
}

const { prev, next } = Astro.props;
---

<nav class="flex items-center justify-between">
  {prev ? (
    <a
      href={prev.href}
      class="group flex items-center text-sm font-medium text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white transition-colors"
    >
      <svg
        class="mr-2 h-4 w-4 stroke-current transition-transform group-hover:-translate-x-1"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      <span>{prev.title}</span>
    </a>
  ) : (
    <div />
  )}

  {next ? (
    <a
      href={next.href}
      class="group flex items-center text-sm font-medium text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white transition-colors"
    >
      <span>{next.title}</span>
      <svg
        class="ml-2 h-4 w-4 stroke-current transition-transform group-hover:translate-x-1"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
      </svg>
    </a>
  ) : (
    <div />
  )}
</nav>
